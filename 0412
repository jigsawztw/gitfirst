import java.io.*;

public class Solution {
    public static void main(String[] args) throws Exception {
        BufferedReader bf = new BufferedReader(new InputStreamReader(System.in));
        int x = Integer.parseInt(bf.readLine());
        if(x>0){
            x= x*2;
        }
        else if(x<0){
            x=x+1;
        }
        else
        x=0;
        System.out.println(x);
    }

}
